[user]
	name = Steven Koeberich
	email = nemesissre@gmail.com

[core]
	editor = vim

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[push]
	default = simple

[color]
	ui = true

[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold

[format]
	pretty = format:%C(blue)%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset

[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"

[merge]
	tool = fugitive

[alias]
	# Basic Commands
	co = checkout
	ci = commit -m
	st = status -s
	mt = mergeTool
	df = diffTool
	ba = branch
	baa = branch -a
	pr = pull --rebase
	cp = cherry-pick
	aa = add -A
	fa = fetch -p --all
	rc = rebase --continue
	pullsub = submodule update --init --remote --recursive
	pullall = "!f(){ git pull \"$@\" && git submodule update --init --remote --recursive; }; f"
	# Log aliases
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)- %an%Creset' --abbrev-commit --date=relative
	lstat = log --stat --relative --abbrev-commit --date=local --pretty=format:'%C(white)%h %C(cyan)%cr %C(green)by %cn %Creset%C(yellow)%n%s%Creset'

[github]
	user = NemesisRE

[include]
	path = .gitconfig.user
